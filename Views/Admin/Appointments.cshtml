@model IEnumerable<WebApplication1.Models.Appointment>

@{
    ViewData["Title"] = "Manage Appointments";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="fas fa-calendar-alt"></i> Manage Appointments
        </h1>
        <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    @if (Model.Any())
    {
        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm bg-warning text-dark">
                    <div class="card-body text-center">
                        <h3>@Model.Count(a => a.Status.ToString() == "Scheduled")</h3>
                        <p class="mb-0">Scheduled</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm bg-success text-white">
                    <div class="card-body text-center">
                        <h3>@Model.Count(a => a.Status.ToString() == "Completed")</h3>
                        <p class="mb-0">Completed</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm bg-danger text-white">
                    <div class="card-body text-center">
                        <h3>@Model.Count(a => a.Status.ToString() == "Cancelled")</h3>
                        <p class="mb-0">Cancelled</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm bg-secondary text-white">
                    <div class="card-body text-center">
                        <h3>@Model.Count(a => a.Status.ToString() == "NoShow")</h3>
                        <p class="mb-0">No Show</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filter Tabs -->
        <ul class="nav nav-tabs mb-3" id="appointmentTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button">
                    All Appointments
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="scheduled-tab" data-bs-toggle="tab" data-bs-target="#scheduled" type="button">
                    Scheduled
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed" type="button">
                    Confirmed
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="cancelled-tab" data-bs-toggle="tab" data-bs-target="#cancelled" type="button">
                    Cancelled
                </button>
            </li>
        </ul>

        <div class="tab-content" id="appointmentTabsContent">
            <!-- All Appointments Tab -->
            <div class="tab-pane fade show active" id="all" role="tabpanel">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Patient</th>
                                        <th>Doctor</th>
                                        <th>Date & Time</th>
                                        <th>Type</th>
                                        <th>Status</th>
                                        <th>Fee</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model)
                                    {
                                        <tr>
                                            <td>@appointment.AppointmentId</td>
                                            <td>
                                                @if (appointment.Patient != null)
                                                {
                                                    @appointment.Patient.FirstName @appointment.Patient.LastName
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (appointment.Doctor != null)
                                                {
                                                    <span>Dr. @appointment.Doctor.FirstName @appointment.Doctor.LastName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>@appointment.AppointmentDate.ToString("dd MMM yyyy, hh:mm tt")</td>
                                            <td>
                                                @if (appointment.Type.ToString() == "InPerson")
                                                {
                                                    <span class="badge bg-primary">In-Person</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">Online</span>
                                                }
                                            </td>
                                            <td>
                                                @{
                                                    var status = appointment.Status.ToString();
                                                }
                                                @if (status == "Scheduled")
                                                {
                                                    <span class="badge bg-warning text-dark">Scheduled</span>
                                                }
                                                else if (status == "Completed")
                                                {
                                                    <span class="badge bg-success">Completed</span>
                                                }
                                                else if (status == "Cancelled")
                                                {
                                                    <span class="badge bg-danger">Cancelled</span>
                                                }
                                                else if (status == "NoShow")
                                                {
                                                    <span class="badge bg-secondary">No Show</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@status</span>
                                                }
                                            </td>
                                            <td>
                                                @if (appointment.Fee > 0)
                                                {
                                                    @appointment.Fee.ToString("C")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Free</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("AppointmentDetails", new { id = appointment.AppointmentId })"
                                                   class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                                @if (appointment.Status.ToString() == "Scheduled")
                                                {
                                                    <button type="button"
                                                            class="btn btn-sm btn-warning"
                                                            onclick="confirmCancel(@appointment.AppointmentId)">
                                                        <i class="fas fa-ban"></i> Cancel
                                                    </button>
                                                }
                                                <button type="button"
                                                        class="btn btn-sm btn-danger"
                                                        onclick="confirmDelete(@appointment.AppointmentId)">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scheduled Appointments Tab -->
            <div class="tab-pane fade" id="scheduled" role="tabpanel">
                @{
                    var scheduledAppointments = Model.Where(a => a.Status.ToString() == "Pending").ToList();
                }

                @if (scheduledAppointments.Any())
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>ID</th>
                                            <th>Patient</th>
                                            <th>Doctor</th>
                                            <th>Date & Time</th>
                                            <th>Type</th>
                                            <th>Fee</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var appointment in scheduledAppointments)
                                        {
                                            <tr>
                                                <td>@appointment.AppointmentId</td>
                                                <td>
                                                    @if (appointment.Patient != null)
                                                    {
                                                        @appointment.Patient.FirstName @appointment.Patient.LastName
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">N/A</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (appointment.Doctor != null)
                                                    {
                                                        <span>Dr. @appointment.Doctor.FirstName @appointment.Doctor.LastName</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">N/A</span>
                                                    }
                                                </td>
                                                <td>@appointment.AppointmentDate.ToString("dd MMM yyyy, hh:mm tt")</td>
                                                <td>
                                                    @if (appointment.Type.ToString() == "InPerson")
                                                    {
                                                        <span class="badge bg-primary">In-Person</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-info">Online</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (appointment.Fee > 0)
                                                    {
                                                        @appointment.Fee.ToString("C")
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Free</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("AppointmentDetails", new { id = appointment.AppointmentId })"
                                                       class="btn btn-sm btn-info">
                                                        <i class="fas fa-eye"></i> View
                                                    </a>
                                                    <button type="button"
                                                            class="btn btn-sm btn-warning"
                                                            onclick="confirmCancel(@appointment.AppointmentId)">
                                                        <i class="fas fa-ban"></i> Cancel
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No scheduled appointments found.
                    </div>
                }
            </div>

            <!-- Completed Appointments Tab -->
            <div class="tab-pane fade" id="completed" role="tabpanel">
                @{
                    var completedAppointments = Model.Where(a => a.Status.ToString() == "Confirmed").ToList();
                }

                @if (completedAppointments.Any())
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>ID</th>
                                            <th>Patient</th>
                                            <th>Doctor</th>
                                            <th>Date & Time</th>
                                            <th>Type</th>
                                            <th>Fee</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var appointment in completedAppointments)
                                        {
                                            <tr>
                                                <td>@appointment.AppointmentId</td>
                                                <td>
                                                    @if (appointment.Patient != null)
                                                    {
                                                        @appointment.Patient.FirstName @appointment.Patient.LastName
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">N/A</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (appointment.Doctor != null)
                                                    {
                                                        <span>Dr. @appointment.Doctor.FirstName @appointment.Doctor.LastName</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">N/A</span>
                                                    }
                                                </td>
                                                <td>@appointment.AppointmentDate.ToString("dd MMM yyyy, hh:mm tt")</td>
                                                <td>
                                                    @if (appointment.Type.ToString() == "InPerson")
                                                    {
                                                        <span class="badge bg-primary">In-Person</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-info">Online</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (appointment.Fee > 0)
                                                    {
                                                        @appointment.Fee.ToString("C")
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Free</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("AppointmentDetails", new { id = appointment.AppointmentId })"
                                                       class="btn btn-sm btn-info">
                                                        <i class="fas fa-eye"></i> View
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No completed appointments found.
                    </div>
                }
            </div>

            <!-- Cancelled Appointments Tab -->
            <div class="tab-pane fade" id="cancelled" role="tabpanel">
                @{
                    var cancelledAppointments = Model.Where(a => a.Status.ToString() == "Cancelled").ToList();
                }

                @if (cancelledAppointments.Any())
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>ID</th>
                                            <th>Patient</th>
                                            <th>Doctor</th>
                                            <th>Date & Time</th>
                                            <th>Type</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var appointment in cancelledAppointments)
                                        {
                                            <tr>
                                                <td>@appointment.AppointmentId</td>
                                                <td>
                                                    @if (appointment.Patient != null)
                                                    {
                                                        @appointment.Patient.FirstName @appointment.Patient.LastName
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">N/A</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (appointment.Doctor != null)
                                                    {
                                                        <span>Dr. @appointment.Doctor.FirstName @appointment.Doctor.LastName</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">N/A</span>
                                                    }
                                                </td>
                                                <td>@appointment.AppointmentDate.ToString("dd MMM yyyy, hh:mm tt")</td>
                                                <td>
                                                    @if (appointment.Type.ToString() == "InPerson")
                                                    {
                                                        <span class="badge bg-primary">In-Person</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-info">Online</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("AppointmentDetails", new { id = appointment.AppointmentId })"
                                                       class="btn btn-sm btn-info">
                                                        <i class="fas fa-eye"></i> View
                                                    </a>
                                                    <button type="button"
                                                            class="btn btn-sm btn-danger"
                                                            onclick="confirmDelete(@appointment.AppointmentId)">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No cancelled appointments found.
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No appointments found.
        </div>
    }
</div>

<!-- Hidden Forms -->
<form id="cancelForm" method="post" action="@Url.Action("CancelAppointment", "Admin")" style="display: none;">
    <input type="hidden" id="cancelId" name="id" />
</form>

<form id="deleteForm" method="post" action="@Url.Action("DeleteAppointment", "Admin")" style="display: none;">
    <input type="hidden" id="deleteId" name="id" />
</form>

<style>
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>

<script>
    function confirmCancel(id) {
        if (confirm('Are you sure you want to cancel this appointment?')) {
            document.getElementById('cancelId').value = id;
            document.getElementById('cancelForm').submit();
        }
    }

    function confirmDelete(id) {
        if (confirm('Are you sure you want to delete this appointment? This action cannot be undone.')) {
            document.getElementById('deleteId').value = id;
            document.getElementById('deleteForm').submit();
        }
    }
</script>