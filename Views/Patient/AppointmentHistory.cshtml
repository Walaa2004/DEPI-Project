@model List<WebApplication1.Models.Appointment>
@{
    ViewData["Title"] = "Appointment History";
    var patient = ViewBag.Patient as WebApplication1.Models.Patient;
}

<div class="container mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-history me-2"></i>Appointment History
                    </h2>
                    <p class="text-muted mb-0">@patient?.FirstName @patient?.LastName</p>
                </div>
                <div class="text-end">
                    <a href="/Patient/Profile/@patient?.PatientId" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- Appointments List -->
    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>Past Appointments
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date & Time</th>
                                        <th>Doctor</th>
                                        <th>Clinic</th>
                                        <th>Type</th>
                                        <th>Status</th>
                                        <th>Fee</th>
                                        <th>Payment</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="fw-semibold">@appointment.AppointmentDate.ToString("MMM dd, yyyy")</div>
                                                <small class="text-muted">@appointment.AppointmentTime.ToString(@"hh\:mm")</small>
                                            </td>
                                            <td>
                                                @if (appointment.Doctor != null)
                                                {
                                                    <div class="fw-semibold">Dr. @appointment.Doctor.FirstName @appointment.Doctor.LastName</div>
                                                    <small class="text-muted">@appointment.Doctor.Specialization</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Doctor not assigned</span>
                                                }
                                            </td>
                                            <td>
                                                @if (appointment.Clinic != null)
                                                {
                                                    <div class="fw-semibold">@appointment.Clinic.ClinicName</div>
                                                    <small class="text-muted">@appointment.Clinic.City</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Online</span>
                                                }
                                            </td>
                                            <td>
                                                @if (appointment.Type == WebApplication1.Models.AppointmentType.Video)
                                                {
                                                    <span class="badge bg-info">
                                                        <i class="fas fa-video me-1"></i>Video Call
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-primary">
                                                        <i class="fas fa-user-md me-1"></i>In-Person
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @switch (appointment.Status)
                                                {
                                                    case WebApplication1.Models.AppointmentStatus.Completed:
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-check me-1"></i>Completed
                                                        </span>
                                                        break;
                                                    case WebApplication1.Models.AppointmentStatus.Cancelled:
                                                        <span class="badge bg-danger">
                                                            <i class="fas fa-times me-1"></i>Cancelled
                                                        </span>
                                                        break;
                                                    case WebApplication1.Models.AppointmentStatus.Confirmed:
                                                        <span class="badge bg-warning">
                                                            <i class="fas fa-clock me-1"></i>Confirmed
                                                        </span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">
                                                            <i class="fas fa-question me-1"></i>@appointment.Status
                                                        </span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <span class="fw-semibold">@appointment.Fee.ToString("C")</span>
                                            </td>
                                            <td>
                                                @if (appointment.Payment != null)
                                                {
                                                    @switch (appointment.Payment.PaymentStatus)
                                                    {
                                                        case WebApplication1.Models.PaymentStatus.Completed:
                                                            <span class="badge bg-success">
                                                                <i class="fas fa-check me-1"></i>Paid
                                                            </span>
                                                            break;
                                                        case WebApplication1.Models.PaymentStatus.Pending:
                                                            <span class="badge bg-warning">
                                                                <i class="fas fa-clock me-1"></i>Pending
                                                            </span>
                                                            break;
                                                        case WebApplication1.Models.PaymentStatus.Failed:
                                                            <span class="badge bg-danger">
                                                                <i class="fas fa-times me-1"></i>Failed
                                                            </span>
                                                            break;
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">No Payment</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    @if (!string.IsNullOrEmpty(appointment.Symptoms) || !string.IsNullOrEmpty(appointment.PerceptionNotes))
                                                    {
                                                        <button type="button" class="btn btn-sm btn-outline-primary"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#detailsModal@(appointment.AppointmentId)">
                                                            <i class="fas fa-eye"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Details Modals -->
        @foreach (var appointment in Model.Where(a => !string.IsNullOrEmpty(a.Symptoms) || !string.IsNullOrEmpty(a.PerceptionNotes)))
        {
            <div class="modal fade" id="detailsModal@(appointment.AppointmentId)" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Appointment Details</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <strong>Date:</strong> @appointment.AppointmentDate.ToString("MMMM dd, yyyy") at @appointment.AppointmentTime.ToString(@"hh\:mm")
                                </div>
                                @if (!string.IsNullOrEmpty(appointment.Symptoms))
                                {
                                    <div class="col-12 mb-3">
                                        <strong>Symptoms:</strong>
                                        <p class="mt-1">@appointment.Symptoms</p>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(appointment.PerceptionNotes))
                                {
                                    <div class="col-12 mb-3">
                                        <strong>Doctor's Notes:</strong>
                                        <p class="mt-1">@appointment.PerceptionNotes</p>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">No Appointment History</h4>
                        <p class="text-muted">You haven't had any past appointments yet.</p>
                        <a href="/patient/profile/@patient?.PatientId })" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Book Your First Appointment
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

