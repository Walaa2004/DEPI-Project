@model List<WebApplication1.Models.Payment>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-11">
                <div class="card">
                    <div class="card-header bg-warning text-white">
                        <h3 class="mb-0">
                            <i class="fas fa-credit-card me-2"></i>
                            Payment History
                        </h3>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.Patient != null)
                        {
                            var patient = (WebApplication1.Models.Patient)ViewBag.Patient;
                            <div class="alert alert-info">
                                <i class="fas fa-user me-2"></i>
                                Payment history for: <strong>@patient.FirstName @patient.LastName</strong> (ID: @patient.PatientId)
                            </div>
                        }

                  

                        @if (Model != null && Model.Any())
                        {
                            <!-- Payment List -->
                            <div class="row">
                                @foreach (var payment in Model)
                                {
                                    <div class="col-md-6 mb-4">
                                        <div class="card payment-card h-100 @(payment.PaymentStatus)">
                                            <div class="card-header bg-light">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <h6 class="mb-0">
                                                        <i class="fas fa-hashtag me-1"></i>
                                                        Payment #@payment.PaymentId
                                                    </h6>
                                                    <span class="badge status-badge @(payment.PaymentStatus)">
                                                        @payment.PaymentStatus.ToString()
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="card-body">
                                                <div class="row mb-3">
                                                    <div class="col-6">
                                                        <strong>Amount:</strong><br>
                                                        <span class="badge currency-badge fs-6">
                                                            @payment.Amount @payment.Currency
                                                        </span>
                                                    </div>
                                                    <div class="col-6">
                                                        <strong>Date:</strong><br>
                                                        <span class="text-muted">
                                                            @(payment.PaidAt?.ToString("MMM dd, yyyy") ?? "Not paid")
                                                        </span>
                                                    </div>
                                                </div>

                                                <div class="row mb-3">
                                                    <div class="col-12">
                                                        <strong>Appointment Details:</strong><br>
                                                        @if (payment.Appointment != null)
                                                        {
                                                            <span class="text-muted">
                                                                @payment.Appointment.AppointmentDate.ToString("MMM dd, yyyy") at
                                                                @payment.Appointment.AppointmentTime.ToString(@"hh\:mm")
                                                            </span>
                                                
                                                            <br>

                                                            @if (payment.Appointment.Doctor != null)
                                                            {
                                                                <small class="text-muted">
                                                                    <i class="fas fa-user-md me-1"></i>Dr. @payment.Appointment.Doctor.FirstName @payment.Appointment.Doctor.LastName<br>
                                                                </small>
                                                            }

                                                            @if (payment.Appointment.Clinic != null)
                                                            {
                                                                <small class="text-muted">
                                                                    <i class="fas fa-hospital me-1"></i>@payment.Appointment.Clinic.ClinicName<br>
                                                                </small>
                                                            }
                                                            else
                                                            {
                                                                <small class="text-muted">
                                                                    <i class="fas fa-video me-1"></i>Online Consultation<br>
                                                                </small>
                                                            }

                                                            <small class="text-muted">
                                                                <i class="fas fa-calendar me-1"></i>@payment.Appointment.Type.ToString()
                                                            </small>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">Appointment #@payment.AppointmentId</span>
                                                        }
                                                    </div>
                                                </div>

                                                @if (!string.IsNullOrEmpty(payment.TransactionId))
                                                {
                                                    <div class="row mb-2">
                                                        <div class="col-12">
                                                            <strong>Transaction ID:</strong><br>
                                                            <code>@payment.TransactionId</code>
                                                        </div>
                                                    </div>
                                                }

                                                @if (payment.PaidAt.HasValue)
                                                {
                                                    <div class="mt-2">
                                                        <small class="text-success">
                                                            <i class="fas fa-check-circle me-1"></i>
                                                            Paid on @payment.PaidAt.Value.ToString("MMM dd, yyyy 'at' hh:mm tt")
                                                        </small>
                                                    </div>
                                                }

                                              
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info text-center py-5">
                                <i class="fas fa-credit-card fa-5x text-muted mb-4"></i>
                                <h4>No Payment History</h4>
                                <p class="text-muted mb-4">You don't have any payment records yet.</p>
                                <a href="/Patient/Profile/@ViewBag.Patient?.PatientId" class="btn btn-primary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                                </a>
                            </div>
                        }

                        <!-- Action Buttons -->
                        @if (Model != null && Model.Any())
                        {
                            <div class="mt-4 d-flex gap-2 justify-content-center">
                                <a href="/Patient/Profile/@ViewBag.Patient?.PatientId" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                                </a>
                             
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

  

