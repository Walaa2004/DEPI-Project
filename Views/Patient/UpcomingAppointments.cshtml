@model IEnumerable<WebApplication1.Models.Appointment>

@{
    ViewData["Title"] = "Upcoming Appointments";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-calendar-event me-2"></i>Upcoming Appointments
        </h2>

        <a href="@Url.Action("Profile", "Patient", new { id = ViewBag.Patient.PatientId })" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Profile
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded-3 shadow-sm">
            <div class="mb-3">
                <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
            </div>
            <h4 class="text-muted">No upcoming appointments found.</h4>
            <p class="mb-4">You have no scheduled visits at the moment.</p>

            <a href="@Url.Action("AvailableAppointments", "Patient", new { id = ViewBag.Patient.PatientId })" class="btn btn-primary px-4 py-2">
                <i class="bi bi-search me-2"></i>Browse Available Appointments
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                bool isVideo = item.Type.ToString() == "Video";
                string cardClass = isVideo ? "border-info" : "border-primary";
                string iconClass = isVideo ? "bi-camera-video" : "bi-hospital";

                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 border-top border-4 @cardClass">
                        <div class="card-body">

                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h4 class="fw-bold text-dark mb-0">@item.AppointmentDate.ToString("dddd")</h4>
                                    <div class="text-primary fw-bold">
                                        @item.AppointmentDate.ToString("MMM dd, yyyy")
                                    </div>
                                </div>
                                <div class="badge bg-light text-dark border p-2 fs-6">
                                    <i class="bi bi-clock"></i> @DateTime.Today.Add(item.AppointmentTime).ToString("hh:mm tt")
                                </div>
                            </div>

                            <hr class="text-muted opacity-25">

                            <div class="mb-3">
                                <small class="text-muted text-uppercase fw-bold" style="font-size: 0.75rem;">Doctor</small>
                                <div class="d-flex align-items-center mt-1">
                                    <div class="bg-light rounded-circle p-2 me-2">
                                        <i class="bi bi-person-fill fs-5 text-secondary"></i>
                                    </div>
                                    <span class="fs-5 fw-bold">
                                        Dr. @(item.Doctor != null ? item.Doctor.FirstName + " " + item.Doctor.LastName : "Unknown Doctor")
                                    </span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <small class="text-muted text-uppercase fw-bold" style="font-size: 0.75rem;">Location Details</small>
                                <div class="d-flex mt-1">
                                    <div class="bg-light rounded-circle p-2 me-2 align-self-start">
                                        <i class="bi @iconClass fs-5 text-secondary"></i>
                                    </div>
                                    <div>
                                        @if (isVideo)
                                        {
                                            <strong class="d-block text-info">Online Video Call</strong>
                                            <small class="text-muted">Link provided before session</small>
                                        }
                                        else
                                        {
                                            // FIX: Get Address Only (Clinic -> Doctor's Clinic -> Doctor's Address)
                                            var address = item.Clinic?.Address
                                            ?? item.Doctor?.Clinic?.Address
                                            ?? item.Doctor?.Address
                                            ?? "Contact doctor for address";

                                            var city = item.Clinic?.City
                                            ?? item.Doctor?.Clinic?.City
                                            ?? "";

                                            // Removed Clinic Name, displaying Address directly
                                            <span class="d-block text-dark fw-bold">
                                                <i class="bi bi-geo-alt me-1"></i>@address
                                            </span>

                                            @if (!string.IsNullOrEmpty(city))
                                            {
                                                <small class="text-muted">@city</small>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <small class="text-muted text-uppercase fw-bold" style="font-size: 0.75rem;">Status</small><br />
                                <span class="badge bg-success mt-1">@item.Status</span>
                            </div>

                        </div>

                        <div class="card-footer bg-white border-top-0 pb-3">
                            <form asp-action="CancelAppointment" asp-controller="Patient" asp-route-id="@item.AppointmentId" method="post" class="d-grid">
                                <button type="submit" class="btn btn-outline-danger"
                                        onclick="return confirm('Are you sure you want to cancel this appointment?');">
                                    <i class="bi bi-x-circle me-1"></i>Cancel Appointment
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>