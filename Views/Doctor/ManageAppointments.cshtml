@model IEnumerable<WebApplication1.Models.Appointment>

@{
    ViewData["Title"] = "My Appointments";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-calendar-check text-primary"></i> Appointment Manager</h2>
        <div>
            <a asp-action="CreateSlot" asp-route-doctorId="@ViewBag.DoctorId" class="btn btn-success">
                <i class="fas fa-plus"></i> Open New Slot
            </a>
            <a asp-action="Dashboard" asp-route-id="@ViewBag.DoctorId" class="btn btn-secondary">
                Back to Dashboard
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Date & Time</th>
                        <th>Type</th>
                        <th>Patient</th>
                        <th>Status</th>
                        <th>Fee</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">
                                @item.AppointmentDate.ToString("MMM dd, yyyy") <br />
                                <small class="text-muted">@item.AppointmentTime</small>
                            </td>
                            <td>
                                @if (item.Type == WebApplication1.Models.AppointmentType.Video)
                                {
                                    <span class="badge bg-info text-dark"><i class="fas fa-video"></i> Video</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary"><i class="fas fa-user"></i> Clinic</span>
                                }
                            </td>
                            <td>
                                @if (item.PatientId == null)
                                {
                                    <span class="text-success fst-italic">-- Available Slot --</span>
                                }
                                else
                                {
                                    <span class="fw-bold text-primary">@item.Patient?.FirstName @item.Patient?.LastName</span>
                                    <br />

                                    <small class="text-muted">@item.Patient?.PhoneNumber</small>
                                }
                            </td>
                            <td>
                                @if (item.PatientId == null)
                                {
                                    <span class="badge bg-success">Open</span>
                                }
                                else if (item.Status == WebApplication1.Models.AppointmentStatus.Confirmed)
                                {
                                    <span class="badge bg-primary">Booked</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">@item.Status</span>
                                }
                            </td>
                            <td>$@item.Fee</td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (!Model.Any())
            {
                <div class="p-5 text-center text-muted">
                    <h4>No appointments found.</h4>
                    <p>Click "Open New Slot" to start accepting patients.</p>
                </div>
            }
        </div>
    </div>
</div>