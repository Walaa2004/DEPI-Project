@model WebApplication1.Models.Appointment

@{
    ViewData["Title"] = "Create Appointment Slot";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i> Open New Slot</h4>
                </div>
                <div class="card-body p-4">

                    <form asp-action="CreateSlot" method="post">
                        <input type="hidden" asp-for="DoctorId" value="@ViewBag.DoctorId" />

                        <div class="mb-3">
                            <label class="fw-bold">Date</label>
                            <input asp-for="AppointmentDate" type="date" class="form-control"
                                   min="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="fw-bold">Time</label>
                                <input asp-for="AppointmentTime" type="time" class="form-control" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="fw-bold">Type</label>
                                <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<WebApplication1.Models.AppointmentType>()"></select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="fw-bold">Fee ($)</label>
                            <input asp-for="Fee" type="number" step="0.1" class="form-control" placeholder="e.g. 500.00" required />
                        </div>

                        <div class="alert alert-info small">
                            <i class="fas fa-info-circle"></i> This will create an empty slot. It will appear in the Patient's list as "Available".
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Create Slot</button>
                            <a asp-action="ManageAppointments" asp-route-id="@ViewBag.DoctorId" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>