@model WebApplication1.Models.Doctor

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9 col-md-11">
            <div class="card shadow">
                <div class="card-body p-4">

                    <h3 class="mb-4 text-center">Doctor Registration</h3>

                    <form asp-controller="Doctor" asp-action="Register" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-section-title text-primary border-bottom mb-3 pb-2">Personal Information</div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">First Name <span class="text-danger">*</span></label>
                                <input asp-for="FirstName" class="form-control" required>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Last Name <span class="text-danger">*</span></label>
                                <input asp-for="LastName" class="form-control" required>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Email <span class="text-danger">*</span></label>
                                <input asp-for="Email" type="email" class="form-control" required>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">Phone Number <span class="text-danger">*</span></label>
                                <input asp-for="PhoneNumber" class="form-control" required>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">Age <span class="text-danger">*</span></label>
                                <input asp-for="Age" type="number" min="25" max="80" class="form-control" required>
                                <span asp-validation-for="Age" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Gender</label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="">Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Password <span class="text-danger">*</span></label>
                                <input asp-for="PasswordHashed" type="password" class="form-control" required minlength="6">
                                <span asp-validation-for="PasswordHashed" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="form-section-title text-primary border-bottom mb-3 pb-2">Professional Information</div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">License Number <span class="text-danger">*</span></label>
                                <input asp-for="LicenseNumber" class="form-control" required minlength="14"
                                       placeholder="Minimum 14 characters">
                                <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                                <small class="form-text text-muted">Must be at least 14 characters</small>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">Experience (Years)</label>
                                <input asp-for="ExperienceYears" type="number" min="0" max="50" class="form-control" value="0">
                                <span asp-validation-for="ExperienceYears" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">Specialization</label>
                                <input asp-for="Specialization" class="form-control" placeholder="e.g., Cardiology, Pediatrics">
                                <span asp-validation-for="Specialization" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">About</label>
                            <textarea asp-for="About" rows="3" class="form-control"
                                      placeholder="Write a short professional bio..."></textarea>
                            <span asp-validation-for="About" class="text-danger"></span>
                        </div>

                        <hr class="my-4">

                        <div class="form-section-title text-primary border-bottom mb-3 pb-2">Availability & Fees</div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Available for Video Calls?</label>
                                <select asp-for="AvailableForVideo" class="form-select">
                                    <option value="false">No</option>
                                    <option value="true">Yes</option>
                                </select>
                                <span asp-validation-for="AvailableForVideo" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">Consultation Fee (Clinic)</label>
                                <input asp-for="ConsultationFee" type="number" step="0.01" min="0"
                                       class="form-control" placeholder="0.00">
                                <span asp-validation-for="ConsultationFee" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">Online Fee</label>
                                <input asp-for="OnlineFee" type="number" step="0.01" min="0"
                                       class="form-control" placeholder="0.00">
                                <span asp-validation-for="OnlineFee" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-section-title text-primary border-bottom mb-3 pb-2">Clinic Address</div>

                        <div class="mb-3">
                            <label class="form-label">Address</label>
                            <textarea asp-for="Address" rows="2" class="form-control"
                                      placeholder="Enter clinic address"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2">Register</button>

                        <div class="text-center mt-3">
                            <a asp-controller="Doctor" asp-action="Login">Already have an account? Login</a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

